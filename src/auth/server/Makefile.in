.SUFFIXES: .c .o .lo

COMPILE = $(CC) $(CFLAGS)
INC_PATH = -I.. -I../common
LIB_PATH = $(LIBS) -lfdirclient -lfastcommon -lserverframe
TARGET_PATH = $(TARGET_PREFIX)/bin

STATIC_OBJS = ../common/auth_global.o ../common/auth_proto.o \
              dao/user.o server_global.o server_func.o common_handler.o \
              service_handler.o db_in_memory.o

ALL_PRGS = fcfs_authd

all: $(STATIC_OBJS) $(ALL_PRGS)

.o:
	$(COMPILE) -o $@ $<  $(STATIC_OBJS) $(LIB_PATH) $(INC_PATH)
.c:
	$(COMPILE) -o $@ $<  $(STATIC_OBJS) $(LIB_PATH) $(INC_PATH)
.c.o:
	$(COMPILE) -c -o $@ $<  $(INC_PATH)

install:
	mkdir -p $(TARGET_PATH)
	cp -f $(ALL_PRGS) $(TARGET_PATH)

clean:
	rm -f $(STATIC_OBJS) $(ALL_PRGS)
